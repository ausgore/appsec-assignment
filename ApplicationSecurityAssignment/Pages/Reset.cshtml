@page
@model ApplicationSecurityAssignment.Pages.ResetModel
@{
}

<style>
    .form-container {
        padding: 20px;
        max-width: 500px;
        margin: 0 auto;
    }

        .form-container label {
            font-weight: 600;
            font-size: 18px;
            margin-left: 4px;
        }

        .form-container .checkbox-label {
            font-weight: 400;
            font-size: 16px;
            margin-left: 5px;
        }

        .form-container input[type="text"],
        .form-container input[type="email"],
        .form-container input[type="password"] {
            outline: none;
            border: 1px solid grey;
            padding: 5px;
            border-radius: 5px;
        }
</style>

<div class="container">
    <h3 class="text-center">Login</h3>
    <div class="form-container">
        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="ResetEmailViewModel.Email"></label>
                <div class="d-flex flex-column">
                    <input asp-for="ResetEmailViewModel.Email" />
                    <span asp-validation-for="ResetEmailViewModel.Email" class="text-danger"></span>
                </div>
            </div>
            <recaptcha />
            <button type="submit" class="btn btn-primary">Send Email</button>
        </form>
    </div>
</div>